{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "umd",
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "dist",
    "karma.conf.ts",
    "test",
    "node_modules",
    "gulpfile.ts",
    "scripts"
  ]
}
